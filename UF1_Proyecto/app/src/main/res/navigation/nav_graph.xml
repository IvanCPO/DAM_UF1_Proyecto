<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introduceFragment"
    >

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.uf1_proyecto.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/inicialiteFragment"
        android:name="com.example.uf1_proyecto.InicialiteFragment"
        android:label="fragment_inicialite"
        tools:layout="@layout/fragment_inicialite" >
        <action
            android:id="@+id/action_inicialiteFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/inicialiteFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_inicialiteFragment_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>
    <fragment
        android:id="@+id/introduceFragment"
        android:name="com.example.uf1_proyecto.IntroduceFragment"
        android:label="fragment_introduce"
        tools:layout="@layout/fragment_introduce" >
        <action
            android:id="@+id/action_introduceFragment_to_inicialiteFragment"
            app:destination="@id/inicialiteFragment" />
        <action
            android:id="@+id/action_introduceFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.uf1_proyecto.TestFragment"
        android:label="TestFragment" />
</navigation>